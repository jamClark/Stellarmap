    <disable>SetWieldLevel</disable>
    <disable>SetWield</disable>
  </itemclass>

  <itemclass class="keycard">
    <control type="CheckBox" paramtype="inherit" text="Inherit LIB_ITEM" tooltip="Make sure this is checked or your object won't work!" function="inherit LIB_ITEM;" enable="false">
      <init>0</init>
    </control>
    <control type="CheckBox" paramtype="inherit" text="Inherit LIB_KEYCARD" tooltip="Make sure this is checked or your object won't work!" function="inherit LIB_KEYCARD;" enable="false">
      <init>1</init>
    </control>
    <control type="TextEntry" paramtype="string" text="Stored Password:" tooltip="The password that needs to be typed to unlock the object attached to this." function="SetCode">
      <init></init>
    </control>
  </itemclass>
  
</deadsouls>
